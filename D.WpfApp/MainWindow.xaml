            Typography.NumeralStyle="OldStyle"
                   />-->
        <!--<Button Content="Ok, Got It"
                Padding="10,5" Margin="10"
                HorizontalAlignment="Center"
                Click="Button_Click"/>-->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
            <local:TextPath
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Fill="#de5f5f"
                Stroke="Black"
                StrokeThickness="1"
                FontFamily="Ariel"
                FontSize="20"
                FontWeight="Bold"
                Text="Status" />
            <local:TextPath
                x:Name="statusBox"
                Margin="10 0 0 0"
                Grid.Row="0" Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Fill="#de5f5f"
                Stroke="Black"
                StrokeThickness="1"
                FontFamily="Ariel"
                FontSize="20"
                FontWeight="Bold"
                Text="" />
            <local:TextPath
                x:Name="additionalData"
                Margin="10 0 0 0"
                Grid.Row="0" Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Fill="#de5f5f"
                Stroke="Black"
                StrokeThickness="1"
                FontFamily="Ariel"
                FontSize="20"
                FontWeight="Bold"
                Text="" />

            <local:TextPath
                x:Name="version"
                Margin="10 10 0 0"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Fill="Green"
                Stroke="Black"
                StrokeThickness="1"
                FontFamily="Ariel"
                FontSize="12"
                FontWeight="Bold"
                Text="Ver" />

            <!--<TextBlock 
                Name="test"
                Text="ALLOOOOOO"
                Style="{StaticResource TitleText}"
                />-->
        </Grid>

    </StackPanel>


